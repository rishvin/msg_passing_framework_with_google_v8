#include <stdio.h>

int getnext(int num)
{
    int pos = 0;
    while(num & 1 << pos)
    {
        pos++;
    }
    num = num | (1<< pos);
    if(pos)
    {
        int mask = 1<<pos - 1;
        num = num ^ mask;
    }
    return num;
}

int main()
{
    printf("%d", getnext(56));
    printf("%d", getnext(0));
    printf("%d", getnext(2));
    printf("%d", getnext(1));
    return 0;
}
